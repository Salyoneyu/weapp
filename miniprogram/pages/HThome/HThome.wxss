/* pages/HThome/HThome.wxss */
.ipt-box{
	width: 80%;
	background-color: white;
	border-radius: 10rpx;
	padding-left: 20rpx;
	height:35px;
}
.search{
	display:flex;
	justify-content: center;
	/* background-color: #39a6ee; */
}
.icon-icon_search{
	position: relative;
	bottom: 20rpx;
}

.search-ipt{
	height: 100%;
	font-size: 30rpx;
	display: inline-block;
	width:90%;
	margin-left:20rpx;
}

button.search-btn {
	font-size: 33rpx;
	min-height: 20px;
	height:35px;
	width: 100px;
	margin-left: 5px;
	margin-right: 5px;
	margin-bottom: 10px;
	color: white;
	background-color: #39a6ee;
	border: none;
	/* border-radius: 20%; */
}


.classify{
  display: flex;
	flex-direction: row;
	background-color: #ffffff;
	justify-content: space-around;
	margin-top: 12px;
	
}
.classify_items{
	text-align: center;
}
.img_box {
  position: relative;
	background-color: #ffffff;
	margin-left: 8px;
	margin-bottom: 0px;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin-bottom: 10rpx;
}
.icon_img{
  width: 60rpx;
	height: 60rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
.txt{
	font-size: 35rpx;
	/* color: #39a6ee; */
}

/* 商品列表 */
.goodlist{	
	display: flex;
	flex-wrap: wrap;
	align-content: start;/* 垂直分布方式 */
	justify-content: start;/* 水平分布方式*/
	background-color: #8a959c00;
}
.goodlist_items{
	text-align: center;
	width: 350rpx;
	height: 420rpx;
	border-radius: 10%;
	background-color: #ffffff;
	margin-left: 20rpx;	/* 左右间距 */
	margin-top: 20rpx;	/* 上下间距 */
}
.good_box{
	position: relative;
	color: #39a6ee;
	width: 350rpx;
	height: 360rpx;
	border-radius: 20%;
}
.good_img{
	width: 350rpx;
	height: 350rpx;
	position: absolute;
	border-radius: 10% 10% 0 0;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%); 
}
/* 商品列表 */